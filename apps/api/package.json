{
  "name": "@mirfa/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --import tsx src/index.ts",
    "dev:watch": "node --watch --import tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --max-warnings=0"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@mirfa/crypto": "workspace:*",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
